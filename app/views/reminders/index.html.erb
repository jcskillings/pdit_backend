<h1>Listing reminders</h1>

<table>
  <thead>
    <tr>
      <th>Reminddate</th>
      <th>Remindtext</th>
      <th>Remindtype</th>
      <th>Issnoozed</th>
      <th>Snoozecount</th>
      <th>Bill</th>
      <th>User name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.remindDate %></td>
        <td><%= reminder.remindText %></td>
        <td><%= reminder.remindType %></td>
        <td><%= reminder.isSnoozed %></td>
        <td><%= reminder.snoozeCount %></td>
        <td><%= reminder.bill %></td>
        <td><%= reminder.user_name %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

