<h1>Listing bills</h1>

<table>
  <thead>
    <tr>
      <th>Bill ID</th>
      <th>Name</th>
      <th>Category</th>
      <th>Paymenttype</th>
      <th>Loginpage</th>
      <th>Duedate</th>
      <th>Repeat</th>
      <th>Amountlo</th>
      <th>Amounthi</th>
      <th>Snoozeduration</th>
      <th>User</th>
      <th>User name</th>
      <th>Reminder1</th>
      <th>Reminder2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.id %></td>
        <td><%= bill.name %></td>
        <td><%= bill.category %></td>
        <td><%= bill.paymentType %></td>
        <td><%= bill.loginPage %></td>
        <td><%= bill.dueDate %></td>
        <td><%= bill.repeat %></td>
        <td><%= bill.amountLo %></td>
        <td><%= bill.amountHi %></td>
        <td><%= bill.snoozeDuration %></td>
        <td><%= bill.user %></td>
        <td><%= bill.user_name %></td>
        <td><%= bill.reminder1 %></td>
        <td><%= bill.reminder2 %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

